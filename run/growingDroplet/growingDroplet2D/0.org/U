FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Some parameters are defined in a separate file to enable simpler parameter
// variation.
#include "<constant>/caseParameters"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    left
    {
        type    zeroGradient;
    }

    right
    {
        type    zeroGradient;
    }

    front
    {
        type    empty;
    }

    back
    {
        type    empty;
    }

    top
    {
        type    zeroGradient;
    }

    inlet
    {
        type                flowRateInletVelocity;
        // Express flow rate as fraction of droplet volume.
        // The cell depth for pseudo 2D is 50 micrometers.
        d           50.0e-6;
        pi          3.141592653589793;
        r           0.001;  // drop radius in meter
        theta0      60;     // Equilibrium contact angle in degree
        alpha       #eval{$theta0*$pi/180};
        phi         #eval{(180 - 2*(90 - $theta0))*$pi/180};
        fraction    $inletFraction;
        //volumetricFlowRate  #eval{$fraction*$d*0.5*$r*$r*($phi - sin($phi))};
        volumetricFlowRate  #eval{$fraction*$d*$r*$r*($alpha - cos($alpha)*sin($alpha))};
        extrapolateProfile  no;
        value               uniform (0 0 0);
    }

    bottomRemainder
    {
        type            noSlip;
    }
}

// ************************************************************************* //


