FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha.oil;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    left
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }

    top
    {
        type            zeroGradient;
    }

    inlet
    {
        type            fixedValue;
        value           uniform 1;
    }

    bottomRemainder
    {
    	type 		fdtHysteresisPlic;
	value 		uniform 60;
	theta0 	    70;             // Not used by boundary condition
        thetaA      110;    // Advancing contact angle
        thetaR      40;    // Receding contact angle
        dxdy        1;              // Cell aspect ratio, 1 for uniform meshes
	limit 		none;
    }
}

