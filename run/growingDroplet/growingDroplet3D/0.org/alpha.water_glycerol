FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha.water;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    left
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    front
    {
        type            zeroGradient;
    }

    back
    {
        type            zeroGradient;
    }

    top
    {
        type            zeroGradient;
    }

    inlet
    {
        type            fixedValue;
        value           uniform 1;
    }

    bottomRemainder
    {
    	type 		fdtHysteresis;
	    value 		uniform 0;
	    theta0 	    60;             // Not used by boundary condition
        thetaA      80;    // Advancing contact angle
        thetaR      40;    // Receding contact angle
        dxdy        1;              // Cell aspect ratio, 1 for uniform meshes
	    limit 		none;
    }
}

// ************************************************************************* //
