FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      transportProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Some parameters are defined in a separate file to enable simpler parameter
// variation.
#include "<constant>/caseParameters"

phases (oil air);

oil
{
    transportModel  Newtonian;
    nu              2.71e-4;
    rho             888;
}

air
{
    transportModel  Newtonian;
    nu              1.53e-5;
    rho             1.19;
}

sigma               0.0329;

surfaceForces
{
    sigma $sigma;
    surfaceTensionForceModel    RDF;
    curvFromTr                  $useCurvatureFromTrace;
    accelerationForceModel      gravity;
    deltaFunctionModel          alphaCSF;
}

