FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Some parameters are defined in a separate file to enable simpler parameter
// variation.
#include "<constant>/caseParameters"

surfaceFile "domainBoundary.fms";

maxCellSize 200.0e-6;

objectRefinements
{
    dropletRegion
    {
        type                        sphere;
        // RL 1: coarse, RL 2: medium, RL 3: fine
        additionalRefinementLevels  #eval{1 + $refinementLevel};
        centre                      (2.5e-3 2.5e-3 0.0);
        radius                      1.4e-3;
        refinementThickness         0.0;
    }
}

